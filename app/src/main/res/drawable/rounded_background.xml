<!-- res/drawable/rounded_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- This is the background color of the circle -->

    <!-- Optional: If you want a border around the circle -->
    <stroke
        android:width="2dp"
        android:color="#FF0000"/> <!-- This is the border color -->

    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>

    <size
        android:width="80dp"
        android:height="80dp"/>

    <corners android:radius="40dp"/> <!-- This radius should be half of the width/height to create a circle -->
</shape>
