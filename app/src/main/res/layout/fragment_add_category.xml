<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddCategoryFragment"
    android:gravity="center">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/tv_dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Image Input -->
    <ImageView
        android:id="@+id/image_category"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/default_image"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Category Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Name:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Category Input -->
    <EditText
        android:id="@+id/edit_category"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter Category Name"
        android:minHeight="48dp" />

    <!-- Save Category Button -->
    <Button
        android:id="@+id/btn_save_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Category"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Label for List of Categories -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Categories:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Scrollable Container for displaying categories -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Your categories will be displayed here -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
